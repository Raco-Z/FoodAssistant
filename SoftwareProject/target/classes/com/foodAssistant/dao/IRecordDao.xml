<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foodAssistant.dao.IRecordDao">
    <!--查询所有记录-->
    <select id="getRecord" resultType="com.foodAssistant.domain.record.Record">
        select * from record;
    </select>

    <!--通过ID查询饮食记录-->
    <select id="getRecordById" parameterType="INT" resultType="com.foodAssistant.domain.record.Record">
        select * from record where recordId=#{rid};
    </select>

    <!--新建饮食记录-->
    <insert id="creatRecord" parameterType="com.foodAssistant.domain.record.Record">
        insert into record(foodName)values (#{foodName});
    </insert>

    <!--删除饮食记录-->
    <delete id="deleteRecord" parameterType="INT">
        delete from record where recordId=#{rid};
    </delete>

    <!--更新饮食记录-->
    <update id="updateRecord" parameterType="com.foodAssistant.domain.record.Record">
        update record set foodName=#{foodName} where recordId=#{recordId};
    </update>
</mapper>